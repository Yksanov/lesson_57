@model ToDoList.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}
<h4 class="text-center">Регистрация</h4>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card border-3">
            <div class="card-body">
                <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Введите имя пользователя</label><br/>
                            <input type="text" asp-for="UserName" class="form-control"/>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Введите Email</label><br/>
                            <input type="email" asp-for="Email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="Password" class="form-label">Введите пароль</label><br/>
                            <input type="password" asp-for="Password" class="form-control"/>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="ConfirmPassword" class="form-label">Повторите пароль</label><br/>
                            <input type="password" asp-for="ConfirmPassword" class="form-control"/>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="Age" class="form-label">Введите Возраст</label><br/>
                            <input type="number" asp-for="Age" class="form-control"/>
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="py-2 text-center">
                            <input type="submit" value="Регистрация" class="btn btn-outline-primary"/>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}