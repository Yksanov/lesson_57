<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ToDoList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/ToDoList.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-around container">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item px-3">
                        <a class="btn btn-outline-primary nav-link text-dark" asp-area="" asp-controller="MyTask" asp-action="Index">Все задачи</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-primary nav-link text-dark" asp-area="" asp-controller="MyTask" asp-action="Create">Добавить задачу</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MyTask" asp-action="ViewTasks">
                            <p>Взятых задач</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MyTask" asp-action="AvailableTasks">
                            <p>Свободные задачи</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MyTask" asp-action="CreatedTasks">
                            <p>Созданных задач</p>
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="nav-item">
                        <div class="dropstart mx-3">

                            <button class="btn border-0 bg-white" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#000" class="bi bi-person" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z"/>
                                </svg>
                            </button>

                            <ul class="dropdown-menu">
                                <li>
                                    <a class="nav-link text-dark dropdown-item" asp-route-id="" asp-controller="User" asp-action="Profile">Профиль</a>
                                </li>
                                <li>
                                    <form asp-action="LogOut" asp-controller="Account" class="d-inline">
                                        <input type="submit" class="nav-link text-dark border-0 bg-white dropdown-item" value="Выйти"/>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </li>
                    }
                    else
                    {
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - ToDoList - <a asp-area="" asp-controller="MyTask" asp-action="Index">Home</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>